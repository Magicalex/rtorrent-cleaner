{
    "name": "magicalex/rtorrent-cleaner",
    "type": "library",
    "description": "rtorrent cleaner script in php for remove unnecessary file in rtorrent",
    "keywords": [
        "rtorrent",
        "rutorrent",
        "cleaner",
        "clean",
        "file",
        "phar",
        "console"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "magicalex",
            "email": "magicalex@mondedie.fr"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "ext-xmlrpc": "*",
        "symfony/console": "3.4.* || 4.3.*",
        "symfony/finder": "3.4.* || 4.3.*",
        "symfony/stopwatch": "3.4.* || 4.3.*"
    },
    "config": {
    },
    "autoload": {
        "psr-4": {
            "Rtcleaner\\": "src"
        }
    },
    "bin": [
        "bin/rtorrent-cleaner"
    ],
    "scripts": {
        "box": [
            "rm -f box.phar",
            "wget https://github.com/humbug/box/releases/download/3.8.1/box.phar",
            "chmod +x box.phar"
        ],
        "phar-php5": [
            "rm -Rf vendor composer.lock rtorrent-cleaner-php5.phar",
            "composer config platform.php 5.6.0",
            "composer install",
            "./box.phar compile",
            "mv rtorrent-cleaner.phar rtorrent-cleaner-php5.phar",
            "composer config --unset platform"
        ],
        "phar-php7": [
            "rm -Rf vendor composer.lock rtorrent-cleaner-php7.phar",
            "composer config platform.php 7.1.3",
            "composer install",
            "./box.phar compile",
            "mv rtorrent-cleaner.phar rtorrent-cleaner-php7.phar",
            "composer config --unset platform"
        ],
        "build": [
            "@box",
            "@phar-php5",
            "@phar-php7"
        ]
    },
    "scripts-descriptions": {
        "box": "Download file box.phar",
        "phar-php5": "Do not use, command for build php5 phar archive",
        "phar-php7": "Do not use, command for build php7 phar archive",
        "build": "Build php phar archive for rtorrent-cleaner"
    }
}
